<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">
    <changeSet id="19-01-loan-relantionships-changeset-01" author="nicola" runOnChange="true">
        <addColumn tableName="loan">
            <column name="book_id" type="bigint">
                <constraints foreignKeyName="fk_loan_book" referencedTableName="book" referencedColumnNames="id"/>
            </column>
        </addColumn>
        <addColumn tableName="loan">
            <column name="user_id" type="bigint">
                <constraints foreignKeyName="fk_loan_user" referencedTableName="user" referencedColumnNames="id"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>