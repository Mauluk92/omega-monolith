<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="26-01-resource-init-changeset-01" author="nicola" runOnChange="true">
        <createTable tableName="resource_operation">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="type_operation" type="varchar(255)">
                <constraints nullable="false" checkConstraint="CHECK( type_operation IN ('INSERTION', 'REMOVAL', 'UPDATE') )"/>
            </column>
            <column name="operation_status" type="varchar(255)">
                <constraints nullable="false" checkConstraint="CHECK( operation_status IN ('SUCCESS', 'FAILURE', 'PARTIAL_INSERTION') )"/>
            </column>
            <column name="additional_information" type="varchar(255)"/>
            <column name="address" type="varchar(255)"/>
            <column name="resource" type="longtext" >
                <constraints checkConstraint="CHECK ( JSON_VALID(resource) )" nullable="false"/>
            </column>
            <column name="timestamp" type="timestamp">
                <constraints nullable="false"/>
            </column>
         </createTable>
    </changeSet>
    <changeSet id="26-01-resource-init-changeset-02" author="nicola" runOnChange="true">
        <createTable tableName="request_operation">
            <column name="requested_type_operation" type="varchar(255)">
                <constraints nullable="false" checkConstraint="CHECK( requested_type_operation IN ('INSERTION', 'REMOVAL', 'UPDATE') )"/>
            </column>
            <column name="resource" type="longtext">
                <constraints nullable="false" checkConstraint="CHECK ( JSON_VALID(resource) )"/>
            </column>
            <column name="additional_information" type="varchar(255)"/>
            <column name="resource_type" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="26-01-resource-add-primmary-key-changeset-03" author="nicola" runOnChange="true">
        <addColumn tableName="request_operation">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>