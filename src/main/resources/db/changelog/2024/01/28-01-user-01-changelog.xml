<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">
    <changeSet id="28-01-user-01-changeset-01" author="nicola" runOnChange="true">
        <createTable tableName="scope">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="permission" type="varchar(255)">
                <constraints checkConstraint="CHECK ( permission IN (NULL, 'ALL', 'READ', 'WRITE', 'UPDATE' ) )"/>
            </column>
        </createTable>
        <createTable tableName="group">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="group_scope">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="group_id" type="bigint">
                <constraints foreignKeyName="group_scope_fk" referencedTableName="group" referencedColumnNames="id"/>
            </column>
            <column name="scope_id" type="bigint">
                <constraints foreignKeyName="scope_group_fk" referencedTableName="scope" referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="28-01-user-01-changeset-02" author="nicola" runOnChange="true">
        <createTable tableName="user_group">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints foreignKeyName="user_group_fk" referencedTableName="user" referencedColumnNames="id"/>
            </column>
            <column name="group_id" type="bigint">
                <constraints foreignKeyName="group_user_fk" referencedTableName="group" referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="28-01-user-01-changeset-03" author="nicola" runOnChange="true">
        <addColumn tableName="request_operation">
            <column name="valid" type="boolean">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="28-01-user-01-changeset-04" author="nicola" runOnChange="true">
        <addColumn tableName="request_operation">
            <column name="user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="request_user_fk" referencedTableName="user" referencedColumnNames="id"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>